<ui5-li-custom type="Active">
    <div style="padding-left: {{_indent}}rem;">
        {{#if items.length}}
            <ui5-button
                    design="Transparent"
                    class="expand-button {{expandedClass}}"
                    icon="navigation-right-arrow"
                    data-item-id="{{_id}}"
                    @click="{{_toggleButtonClick}}"
            ></ui5-button>
        {{/if}}

        {{text}}
    </div>
</ui5-li-custom>
